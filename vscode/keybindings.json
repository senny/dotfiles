// Place your key bindings in this file to override the defaultsauto[]
[
  // Cursor Movement
  { "key": "cmd+i", "command": "cursorUp" },
  { "key": "cmd+k", "command": "cursorDown" },
  { "key": "cmd+j", "command": "cursorLeft" },
  { "key": "cmd+l", "command": "cursorRight" },
  { "key": "cmd+o", "command": "cursorWordRight" },
  { "key": "cmd+u", "command": "cursorWordLeft" },
  { "key": "cmd+shift+l", "command": "cursorLineEnd" },
  { "key": "cmd+shift+j", "command": "cursorLineStart" },
  { "key": "cmd+shift+o", "command": "cursorLineStart" },
  { "key": "cmd+shift+u", "command": "cursorLineStart" },

  // Buffers
  { "key": "ctrl+x b", "command": "workbench.action.showAllEditorsByMostRecentlyUsed" },
  { "key": "ctrl+x p", "command": "workbench.action.openRecent" },
  
  // Commands
  { "key": "cmd+a", "command": "workbench.action.showCommands" },
  { "key": "cmd+t", "command": "workbench.action.quickOpen" },
  { "key": "ctrl+x ctrl+s", "command": "workbench.action.files.save" },

  // Splits
  { "key": "cmd+1", "command": "workbench.action.joinAllGroups" },
  { "key": "cmd+2", "command": "workbench.action.splitEditorUp" },
  { "key": "cmd+3", "command": "workbench.action.splitEditorLeft" },
  

]